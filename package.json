{
  "name": "applint",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "setup": "yarn install && npm run build",
    "eslint": "eslint --no-eslintrc --config ./.eslintrc.js --ext .js,.ts ./ --cache",
    "eslint:fix": "npm run eslint -- --fix",
    "clean": "rimraf packages/*/dist",
    "build": "npm run clean && tsc --build ./tsconfig.json",
    "watch": "npm run clean && tsc --build ./tsconfig.json --watch",
    "test": "vitest"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "eslint": "^8.0.0",
    "husky": "^7.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "vitest": "^0.28.0"
  },
  "packageManager": "yarn@1.22.19"
}
