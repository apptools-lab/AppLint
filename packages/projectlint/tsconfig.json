{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["ES2018",],
    "types": ["jest", "jscodeshift", "node"],
  },
  "exclude": [
    "scripts",
    "dist"
  ]
}
